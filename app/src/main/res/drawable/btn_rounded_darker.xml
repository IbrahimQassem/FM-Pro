<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp"/>
                    <solid android:color="@color/overlay_dark_20"/>
                    <padding android:left="25dp" android:top="0dp" android:right="25dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="70dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp"/>
                    <solid android:color="@color/overlay_dark_10"/>
                    <padding android:left="25dp" android:top="0dp" android:right="25dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="70dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
