<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_large">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/spacing_medium"
                    android:scaleType="fitCenter"
                    android:transitionName="@string/app_name"
                    app:layout_constraintEnd_toEndOf="@id/civ_logo"
                    app:layout_constraintStart_toStartOf="@id/civ_logo"
                    app:srcCompat="@drawable/logo_app"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/spacing_large"
                    android:background="@color/grey_5"
                    app:layout_constraintTop_toBottomOf="@+id/iv_banner"
                    tools:layout_editor_absoluteX="15dp" />


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/civ_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/spacing_large"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="16dp"
                    app:civ_border="true"
                    app:civ_border_color="@color/pink_50"
                    app:civ_border_width="1dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_banner"
                    app:srcCompat="@drawable/logo_app" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    app:layout_constraintBottom_toTopOf="@+id/nested_scroll_view"
                    app:layout_constraintEnd_toStartOf="@+id/bt_toggle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/civ_logo"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:layout_constraintVertical_bias="0.608">

                    <TextView
                        android:id="@+id/title"
                        style="@style/TextBold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/grey_80"
                        tools:text="@string/app_name" />

                    <TextView
                        style="@style/TextNormal"
                        android:id="@+id/tv_tag"
                        android:padding="@dimen/spacing_medium"
                        android:textColor="@color/grey_40"
                        tools:text="@string/label_tag" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/bt_toggle"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/spacing_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.902"
                    app:layout_constraintStart_toEndOf="@+id/title"
                    app:layout_constraintTop_toBottomOf="@+id/iv_banner"
                    app:srcCompat="@drawable/ic_expand_arrow"
                    app:tint="@color/grey_500" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:scrollingCache="true"
                    app:layout_constraintTop_toBottomOf="@+id/bt_toggle">

                    <LinearLayout
                        android:id="@+id/lyt_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:background="@color/grey_50"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/civ_logo">

                        <!--                <View-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="1dp"-->
                        <!--                    android:layout_marginHorizontal="@dimen/spacing_large"-->
                        <!--                    android:layout_marginLeft="@dimen/spacing_large"-->
                        <!--                    android:layout_marginRight="@dimen/spacing_large"-->
                        <!--                    android:background="@color/grey_10" />-->

                        <LinearLayout
                            android:id="@+id/lyt_parent_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_large">

                                <TextView
                                    style="@style/TextBold"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:text="@string/label_desc"
                                    android:textColor="@color/grey_80" />

                                <TextView
                                    android:id="@+id/tv_dec"
                                    style="@style/TextNormal"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    tools:text="@string/label_desc" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:background="@color/grey_10" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lyt_parent_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/spacing_large">

                                <TextView
                                    style="@style/TextBold"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"                                    android:text="@string/label_program_category"
                                    android:textColor="@color/grey_80" />


                                <com.google.android.flexbox.FlexboxLayout
                                    android:id="@+id/flex_category"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"                                    app:flexWrap="wrap"
                                    app:justifyContent="flex_end">

                                </com.google.android.flexbox.FlexboxLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:background="@color/grey_10" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lyt_parent_day_period"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/spacing_large">

                                <TextView
                                    style="@style/TextBold"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"                                    android:text="@string/label_show_date"
                                    android:textColor="@color/grey_80" />

                                <TextView
                                    android:id="@+id/tv_day_period"
                                    style="@style/TextNormal"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"                                    tools:text="@string/label_desc" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:background="@color/grey_10" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lyt_parent_show_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/spacing_large">

                                <TextView
                                    style="@style/TextBold"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"                                    android:text="@string/label_show_days"
                                    android:textColor="@color/grey_80" />


                                <com.google.android.flexbox.FlexboxLayout
                                    android:id="@+id/flex_day_show"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"                                    app:flexWrap="wrap"
                                    app:justifyContent="flex_end" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>