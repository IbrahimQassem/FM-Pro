<?xml version="1.0" encoding="utf-8"?><!-- styles.xml-->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HudHudFM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>


    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>


    <!--    ////////// Firebase-->
    <!-- Activity with no Title -->

    <!-- Dark Buttons -->

    <!-- Light EditTexts -->

    <style name="EditText_Flat_Grey">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textColorHint">@color/grey_40</item>
    </style>

    <style name="Button_Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Yellow.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>


    <!-- Green App Theme -->
    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>

        <!-- AppCompat Control Attributes -->
        <!--        &lt;!&ndash; Other control states (not in this example)-->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!--        <item name="colorControlHighlight">@color/fab_color_pressed</item>-->
        -

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppTheme.Dialog.Main</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Main</item>


    </style>

    <!-- Green Dialog Theme -->
    <style name="AppTheme.Dialog.Main" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <!-- Green Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Main" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textColor">@color/red_200</item>-->
    </style>


    <style name="TextBold" parent="@style/main_text">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/tj_bold</item>
    </style>

    <style name="TextMedium" parent="@style/main_text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/tj_medium</item>
    </style>

    <style name="TextRegular" parent="@style/main_text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/tj_regular</item>
    </style>

    <style name="TextLight" parent="@style/main_text">
        <item name="android:fontFamily">@font/tj_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color -->
        <item name="colorControlActivated">@color/design_default_color_error</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/green_500 </item>
        <!-- Inactive track color -->
        <item name="android:colorForeground">@color/grey_500</item>
    </style>
</resources>